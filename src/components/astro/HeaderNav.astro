---
const {currentPage} = Astro.props;
---

<nav>
    <ul>
        <li class={currentPage=="home" && 'active' }>
            <a href="/">
                <span>Home</span>
                <svg aria-hidden="true" focusable="false">
                    <use xlink:href="#icon-chevron-right" />
                </svg>
            </a>
        </li>
        <li class={currentPage=="projects" && 'active' }>
            <a href="/projects">
                <span>Projects</span>
                <svg aria-hidden="true" focusable="false">
                    <use xlink:href="#icon-chevron-right" />
                </svg>
            </a>
        </li>
        <li class={currentPage=="blog" && 'active' }>
            <a href="/blog">
                <span>Blog</span>
                <svg aria-hidden="true" focusable="false">
                    <use xlink:href="#icon-chevron-right" />
                </svg>
            </a>
        </li>
        <li class={currentPage=="experiments" && 'active' }>
            <a href="/experiments">
                <span>Experiments</span>
                <svg aria-hidden="true" focusable="false">
                    <use xlink:href="#icon-chevron-right" />
                </svg>
            </a>
        </li>
    </ul>
</nav>

<style>
    nav {
        margin-top: 1rem;

    }

    nav ul {
        list-style: none;
        display: flex;
        align-items: center;
        overflow: auto;
    }

    a {
        display: flex;
        align-items: center;
        justify-content: space-between;
        text-decoration: none;
        padding: 1em .5em;
        color: var(--main-color-dark);
        border-radius: 1em;
    }

    li.active a {
        background: hsla(var(--main-h), 40%, 90%);
    }

    a:hover {
        background: hsla(var(--main-h), 40%, 93%);
    }

    a svg {
        display: none;
    }


    @media screen and (min-width: 1024px) {
        nav {
            margin-top: 0;
        }

        nav ul {
            flex-direction: column;
            align-items: unset;
        }

        a svg {
            display: block;
            height: 1.1rem;
            width: 1.1rem;
        }
    }
</style>