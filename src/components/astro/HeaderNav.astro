---
const {currentPage} = Astro.props;
---

<nav>
    <ul>
        <li class={currentPage=="home" && 'active' }>
            <a href="/">
                <span>Home</span>
                <svg aria-hidden="true" focusable="false">
                    <use xlink:href="#icon-chevron-right" />
                </svg>
            </a>
        </li>
        <li class={currentPage=="resume" && 'active' }>
            <a href="/resume">
                <span>Resume</span>
                <svg aria-hidden="true" focusable="false">
                    <use xlink:href="#icon-chevron-right" />
                </svg>
            </a>
        </li>
        <li class={currentPage=="blog" && 'active' }>
            <a href="/blog">
                <span>Blog</span>
                <svg aria-hidden="true" focusable="false">
                    <use xlink:href="#icon-chevron-right" />
                </svg>
            </a>
        </li>
        <li class={currentPage=="experiments" && 'active' }>
            <a href="/experiments">
                <span>Experiments</span>
                <svg aria-hidden="true" focusable="false">
                    <use xlink:href="#icon-chevron-right" />
                </svg>
            </a>
        </li>
    </ul>
</nav>

<style>
    nav {
        margin-top: 1rem;

    }
    nav ul {
        list-style: none;
        display: flex;
        align-items: center;
        overflow: auto;
    }

    li {
        padding: 0 .5rem;
        border-radius: 1rem;
    }

    li.active {
        background: hsla(var(--accent-h), var(--accent-s), 90%);
    }

    a {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin: 1rem 0;
        text-decoration: none;
        color: var(--accent-color);
    }

    a svg {
        display: none;
    }


    @media screen and (min-width: 1024px) {
        nav {
            margin-top: 0;
        }
        nav ul {
            flex-direction: column;
            align-items: unset;
        }

        a svg {
            display: block;
            height: 1.1rem;
            width: 1.1rem;
        }
    }
</style>